<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UniformMargin">
        <item name="android:layout_marginBottom">@dimen/margin_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_text</item>
        <item name="android:layout_marginRight">@dimen/margin_text</item>
        <item name="android:layout_marginTop">@dimen/margin_text</item>
    </style>

    <style name="WrapContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="MatchParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContentVertical" parent="WrapContentStyle">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="UniformMarginWrapContent" parent="UniformMargin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_iv_recipe_item</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="NestedScrollViewStep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>

        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="ConstraintCenterX">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ImageViewConstrainedCenterXStyle" parent="ImageViewStyle">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ConstraintCenterY">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="ConstraintCenter">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="ConstraintCenterWrapContent" parent="ConstraintCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConstraintCenterXWrapContent" parent="ConstraintCenterX">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConstraintCenterYWrapContent" parent="ConstraintCenterY">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UniformMarginWrapContentConstraintCenter" parent="UniformMarginWrapContent">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="ConstraintZeroBias" parent="UniformMarginWrapContent">
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="ConstraintCenterXZeroBias" parent="ConstraintCenterX">
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="ConstraintCenterYZeroBias" parent="ConstraintCenterY">
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="ConstraintCenterYWrapContentZeroBias" parent="ConstraintCenterYWrapContent">
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="ConstraintCenterXTitle" parent="ConstraintCenterX">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UniformMarginWrapContentConstraintCenterTitle" parent="UniformMarginWrapContentConstraintCenter">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UniformMarginWrapContentConstraintCenterShadowedTitle" parent="UniformMarginWrapContentConstraintCenterTitle">
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>

    </style>


    <style name="CardViewStyle" parent="WrapContentStyle">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">20dp</item>
    </style>


</resources>
